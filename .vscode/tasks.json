{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build project",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/src/emulator.c",
                "${workspaceFolder}/src/emulib.c",
                "-lSDL2",
                "-o",
                "${workspaceFolder}/dist-linux/emulator"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: gcc build optimized",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/src/emulator.c",
                "${workspaceFolder}/src/emulib.c",
                "-lSDL2",
                "-O3",
                "-o",
                "${workspaceFolder}/dist-linux/emulator_op"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}